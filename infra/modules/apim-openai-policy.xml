<policies>
    <inbound>
        <base />
        <choose>
            <when condition="@(string.IsNullOrWhiteSpace("{{AzureOpenAIKey}}"))">
                <authentication-managed-identity resource="https://cognitiveservices.azure.com/" />
            </when>
            <otherwise>
                <set-header name="api-key" exists-action="override">
                    <value>{{AzureOpenAIKey}}</value>
                </set-header>
            </otherwise>
        </choose>
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>