<policies>
    <inbound>
        <base />
        <set-variable name="Selected" value="@(DateTime.Now.Ticks % 3)" />
        <set-backend-service backend-id="@( $"OpenAI-{context.Variables["Selected"]}" )" />
        <choose>
            <when condition="@("{{AOAIAuthMode}}" == "ManagedIdentity")">
                <authentication-managed-identity resource="https://cognitiveservices.azure.com/" />
            </when>
        </choose>
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>